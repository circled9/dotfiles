set fenc=utf-8
set ambiwidth=double
set nobackup
set noswapfile
set autoread

set showcmd
set laststatus=2
set visualbell
set display=lastline
set pumheight=10

syntax enable
set number
" set cursorline
" set cursorcolumn
set showmatch
set matchtime=1

set smartindent
set expandtab
set shiftwidth=4
set tabstop=4

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
set showmatch

nmap <Esc><Esc> :nohlsearch<CR><Esc>
nnoremap Y y$
nnoremap + <C-a>
nnoremap - <C-x>

